---
import '@assets/css/main.css';
import 'overlayscrollbars/overlayscrollbars.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from 'astro-loading-indicator/component';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-overlayscrollbars-initialize>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <LoadingIndicator color="var(--color-accent)" />
  </head>
  <body data-overlayscrollbars-initialize>
    <div class="container" transition:animate="none">
      <Header />
      <div class="content">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content {
    padding: 5rem 0;
    flex: 1;
  }
</style>

<script>
  import { OverlayScrollbars } from 'overlayscrollbars';

  const initOverlayScrollbars = () => {
    OverlayScrollbars(document.body, {
      scrollbars: {
        autoHide: 'leave',
        theme: 'os-theme-light'
      }
    });
  };

  document.addEventListener('DOMContentLoaded', initOverlayScrollbars);
  document.addEventListener('astro:after-swap', initOverlayScrollbars);
</script>
