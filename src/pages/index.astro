---
import Layout from '@layouts/Layout.astro';
import avt from '@assets/images/avt.png';
import { Image } from 'astro:assets';
import Button from '@components/Button.astro';
import { AtSign, PenTool } from '@lucide/astro';
import { techStacks } from '@lib/constants';
---

<Layout title="Vo Quang Chien - Software Engineer">
  <main class="home">
    <Image src={avt} alt="Vo Quang Chien" decoding="async" loading="eager" width="350" class="home__photo" />
    <div class="home__content">
      <h1 class="home__title">Software Engineer and <span class="home__title-accent">Vue.js</span> enthusiast</h1>
      <p class="home__description">
        I&apos;m Chien, a Software Engineer with a focus on fullstack web development. I love building things with
        Vue.js, Node.js and TypeScript. I enjoy learning new technologies and sharing my knowledge with the community.
        Currently, I&apos;m expanding my abilities in AI applications development, high-performance backend systems, and
        microservices with Node.js and Python.
      </p>
      <div class="home__controls">
        <Button href="/contact"><AtSign size="1.2em" /> Contact Me</Button>
        <Button href="/articles" variant="outline"><PenTool size="1.2em" /> Read Articles</Button>
      </div>
    </div>
  </main>
  <section class="tech-stacks">
    <div class="marquee__track">
      <div>
        {techStacks.map((tech) => <tech.icon width="56" height="56" fill={tech.fill} />)}
      </div>
      <div>
        {techStacks.map((tech) => <tech.icon width="56" height="56" fill={tech.fill} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .home {
    display: flex;
    column-gap: 5rem;
  }

  .home__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .home__title-accent {
    color: var(--color-green);
  }

  .home__controls {
    margin-top: 0.75rem;
    display: flex;
    column-gap: 1rem;
  }

  .tech-stacks {
    margin-top: 4rem;
    overflow: hidden;
    --marquee-duration: 14s;
  }

  .marquee__track {
    display: inline-flex;
    gap: 2.5rem;
    align-items: center;
    width: max-content;
    animation: marquee var(--marquee-duration) linear infinite;
    will-change: transform;
  }

  .marquee__track > * {
    flex: none;
    display: inline-flex;
    gap: 2.5rem;
  }

  @keyframes marquee {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>
